<%- include('partials/header') -%>

<h1>Home</h1>

<p><%= homeStartingContent %></p>
<% posts.forEach((post) => { %>
<h1><%= post.title %></h1>
<% if(post.content.length > 250){ %>
<p><%= post.content.substring(0, 250) %>...<a href="/posts/<%= post.id %>">Read More</a></p>
<% } else { %>
<p><%= post.content %></p>
<a href="/posts/<%= post.id %>">Read More</a>
<% } %>

<% }); %>

<%- include('partials/footer') -%>