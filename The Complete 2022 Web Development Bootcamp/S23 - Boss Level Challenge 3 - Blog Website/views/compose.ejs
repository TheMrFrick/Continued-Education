<%- include('partials/header') -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitleTF" class="form-label">Title</label>
    <input type="text" class="form-control" name="postTitle" id="postTitleTF">

  </div>
  <div class="form-group">
    <label for="postContentTA" class="form-label">Content</label>
    <textarea class="form-control" name="postContent" id="postContentTA" cols="30" rows="10"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>

